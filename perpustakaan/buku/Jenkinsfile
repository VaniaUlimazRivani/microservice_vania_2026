pipeline {
    agent any
    
    environment {
        // Menggunakan kredensial Docker Hub yang sudah kamu buat di Jenkins
        DOCKER_HUB_CREDENTIALS = credentials('docker-token')
        DOCKER_IMAGE = 'VaniaUlimazRivani/buku'
        SERVICE_NAME = 'buku'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Mengambil kode terbaru dari GitHub
                checkout scm
            }
        }
        
        stage('Get Version') {
            steps {
                script {
                    // Mendapatkan pesan commit untuk menentukan kenaikan versi (major/minor/patch)
                    def commitMsg = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
                    echo "Commit message: ${commitMsg}"
                    
                    // Mengecek versi terakhir yang ada di Docker Hub
                    def tags = sh(
                        script: """curl -s 'https://registry.hub.docker.com/v2/repositories/${DOCKER_IMAGE}/tags?page_size=100' | \
                                   grep -o '"name":"[0-9]\\+\\.[0-9]\\+\\.[0-9]\\+"' | \
                                   grep -o '[0-9]\\+\\.[0-9]\\+\\.[0-9]\\+' | \
                                   sort -V | tail -1""",
                        returnStdout: true
                    ).trim()
                    
                    if (tags == '') {
                        env.NEW_VERSION = '1.0.0'
                    } else {
                        def version = tags.tokenize('.')
                        def major = version[0].toInteger()
                        def minor = version[1].toInteger()
                        def patch = version[2].toInteger()
                        
                        if (commitMsg.contains('[major]')) {
                            major += 1
                            minor = 0
                            patch = 0
                        } else if (commitMsg.contains('[minor]')) {
                            minor += 1
                            patch = 0
                        } else {
                            patch += 1
                        }
                        
                        env.NEW_VERSION = "${major}.${minor}.${patch}"
                    }
                    
                    echo "Current version: ${tags ?: 'none'}"
                    echo "New version: ${env.NEW_VERSION}"
                }
            }
        }
        
        stage('Test') {
            steps {
                // PERBAIKAN: Masuk ke folder buku sebelum menjalankan tes
                dir('perpustakaan/buku') {
                    sh './mvnw clean test'
                }
            }
        }
        
        stage('Build') {
            steps {
                // PERBAIKAN: Masuk ke folder buku sebelum kompilasi jar
                dir('perpustakaan/buku') {
                    sh './mvnw clean package -DskipTests'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                // PERBAIKAN: Masuk ke folder buku agar Dockerfile ditemukan
                dir('perpustakaan/buku') {
                    sh "docker build --no-cache -t ${DOCKER_IMAGE}:${env.NEW_VERSION} ."
                    sh "docker tag ${DOCKER_IMAGE}:${env.NEW_VERSION} ${DOCKER_IMAGE}:latest"
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                // Login dan kirim image ke repositori Docker Hub kamu
                sh 'echo $DOCKER_HUB_CREDENTIALS_PSW | docker login -u $DOCKER_HUB_CREDENTIALS_USR --password-stdin'
                sh "docker push ${DOCKER_IMAGE}:${env.NEW_VERSION}"
                sh "docker push ${DOCKER_IMAGE}:latest"
            }
        }
        
        stage('Cleanup') {
            steps {
                // Menghapus image lokal agar tidak memenuhi memori server Jenkins
                sh "docker rmi ${DOCKER_IMAGE}:${env.NEW_VERSION} ${DOCKER_IMAGE}:latest || true"
            }
        }
    }
    
    post {
        success {
            echo "✅ ${SERVICE_NAME} service v${env.NEW_VERSION} built and pushed to Docker Hub successfully!"
        }
        failure {
            echo "❌ ${SERVICE_NAME} service build failed!"
        }
    }
}